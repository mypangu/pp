{
  "id": "com.panguplay.app",
  "name": "PanguPlay",
  "short_name": "PanguPlay",
  "lang": "en",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["fullscreen", "minimal-ui"],
  "background_color": "#fafafa",
  "theme_color": "#1976d2",
  "description": "Watch Latest Movies, TV Shows for free without Ads.",
  "orientation": "any",
  "categories": ["entertainment", "video", "streaming"],
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/favicon.png",
      "sizes": "16x16",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "Movies",
      "short_name": "Movies",
      "description": "Browse all movies",
      "url": "/movies.html"
    },
    {
      "name": "TV Shows",
      "short_name": "Shows",
      "description": "Browse all TV shows",
      "url": "/shows.html"
    },
    {
      "name": "Dubbed",
      "short_name": "Dubbed",
      "description": "Browse dubbed content",
      "url": "/dubbed.html"
    },
    {
      "name": "720p",
      "short_name": "720p",
      "description": "Browse 720p content",
      "url": "/720p.html"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot1.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow"
    }
  ],
  "prefer_related_applications": false,
  "handle_links": "auto",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  }
}